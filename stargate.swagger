swagger: "2.0"
info:
  description: "Api pour le pilotage des led de la porte des étoiles."
  version: "1.0.0"
  title: "Stargate"
  contact:
    email: "apiteam@swagger.io"
  license:
    name: "Apache 2.0"
    url: "http://www.apache.org/licenses/LICENSE-2.0.html"
host: "localhost:8080"
basePath: "/stargate/v1"
schemes:
- "http"
paths:
  /bandeaux:
    get:
      tags:
      - "bandeaux"
      summary: "Recupère tous les bandeaux"
      description: "Retourne la liste des bandeaux"
      operationId: "getBandeaux"
      produces:
      - "application/xml"
      - "application/json"
      responses:
        200:
          description: "successful operation"
          schema:
            type: "array"
            items:
              $ref: "#/definitions/Bandeau"
        404:
          description: "Bandeaux not found"
  /bandeaux/{bandeauId}:
    get:
      tags:
       - "bandeaux"
      summary: "recupère un bandeau par son ID"
      description: "Retourne un bandeau"
      operationId: "getBandeauById"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - name: "bandeauId"
        in: "path"
        description: "ID du bandeau à retourner"
        required: true
        type: "integer"
        format: "int32"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Bandeau"
        400:
          description: "Invalid ID supplied"
        404:
          description: "Bandeau not found"
  /bandeaux/{bandeauId}/leds:
    get:
      tags:
      - "leds"
      summary: "Recupère toutes les leds du bandeau"
      description: "Retourne la liste des les du bandeau"
      operationId: "getLeds"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - name: "bandeauId"
        in: "path"
        description: "ID du bandeau à retourner"
        required: true
        type: "integer"
        format: "int32"
      responses:
        200:
          description: "successful operation"
          schema:
           type: "array"
           items:
            $ref: "#/definitions/Led"
        400:
          description: "Invalid ID supplied"
        404:
          description: "Leds not found"
    put:
      tags:
      - "leds"
      summary: "Met à jour l'état de toutes les leds du bandeau"
      description: ""
      operationId: "updateLeds"
      consumes:
      - "application/x-www-form-urlencoded"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - name: "bandeauId"
        in: "path"
        description: "ID du bandeau dont les leds doivent être mises à jour"
        required: true
        type: "integer"
        format: "int32"
      - name: "niveauRouge"
        in: "formData"
        type: "integer"
        format: "int32"
        required: true
        description: ""
      - name: "niveauVert"
        in: "formData"
        type: "integer"
        format: "int32"
        required: true
        description: ""
      - name: "niveaubleu"
        in: "formData"
        type: "integer"
        format: "int32"
        required: true
        description: ""
      responses:
        405:
          description: "Invalid input"
  /bandeaux/{bandeauId}/leds/{ledId}:
    get:
      tags:
      - "leds"
      summary: "recupère une led d'un bandeau par son ID"
      description: "Retourne un bandeau"
      operationId: "getLedById"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - name: "bandeauId"
        in: "path"
        description: "ID du bandeau selectionné"
        required: true
        type: "integer"
        format: "int32"
      - name: "ledId"
        in: "path"
        description: "ID de la led du bandeau à retourner"
        required: true
        type: "integer"
        format: "int32"
      responses:
        200:
          description: "successful operation"
          schema:
            $ref: "#/definitions/Led"
        400:
          description: "Invalid ID supplied"
        404:
          description: "Pet not found"
    put:
      tags:
      - "leds"
      summary: "Met à jour l'état de la led"
      description: ""
      operationId: "updateLed"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Led à mettre à jour"
        required: true
        schema:
          $ref: "#/definitions/Led"
      responses:
        405:
          description: "Invalid input"
  /reset/bandeaux:
    put:
      tags:
      - "reset"
      summary: "Eteint toutes les led de tous les bandeaux"
      description: ""
      operationId: "eteindre"
      produces:
      - "application/xml"
      - "application/json"
      parameters: []
      responses:
        default:
          description: "successful operation"
definitions:
  Bandeau:
    type: "object"
    required:
    - "id"
    - "name"
    properties:
      id:
        type: "integer"
        format: "int32"
      name:
        type: "string"
        example: "glyphs"
      leds:
        type: "array"
        xml:
          name: "leds"
        items:
          $ref: "#/definitions/Led"
    xml:
      name: "Bandeau"
  Led:
    type: "object"
    required:
    - "id"
    properties:
      id:
        type: "integer"
        format: "int32"
      groupe:
        type: "integer"
        format: "int32"
      niveauRouge:
        type: "integer"
        format: "int32"
      niveauVert:
        type: "integer"
        format: "int32"
      niveaubleu:
        type: "integer"
        format: "int32"
    xml:
      name: "Led"
